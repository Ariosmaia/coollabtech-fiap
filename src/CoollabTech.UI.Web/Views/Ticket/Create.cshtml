@model CoollabTech.Application.ViewModels.TicketViewModel

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>TicketViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Prestador de serviço</label>
                <select class="form-control">
                    @foreach (var serviceProvider in Model.ServiceProvidersViewModel)
                    {
                        <option value="@serviceProvider.Id">@serviceProvider.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TicketTypeId" class="control-label"></label>
                <select asp-for="TicketTypeId" class="form-control">
                    @foreach (var ticketType in Model.TicketTypesViewModel)
                    {
                        <option value="@ticketType.Id">@ticketType.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TicketStatusId" class="control-label"></label>
                <select asp-for="TicketStatusId" class="form-control">
                    @foreach (var ticketStatus in Model.TicketStatusViewModel.Where(x => x.Name == "Aberto"))
                    {
                        <option value="@ticketStatus.Id">@ticketStatus.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localization" class="control-label"></label>
                <input asp-for="Localization" class="form-control" />
                <span asp-validation-for="Localization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
