@model CoollabTech.Application.ViewModels.TicketViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TicketViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Prestador de serviço</label>
                @Html.DropDownList("ServiceProviderId", new SelectList(ViewBag.ServiceProviders, "Id", "Name"), null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="TicketTypeId" class="control-label"></label>
                @Html.DropDownList("TicketTypeId", new SelectList(ViewBag.TicketTypes, "Id", "Name"), null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="TicketStatusId" class="control-label"></label>
                @Html.DropDownList("TicketStatusId", new SelectList(ViewBag.TicketStatus, "Id", "Name"), null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localization" class="control-label"></label>
                <input asp-for="Localization" class="form-control" />
                <span asp-validation-for="Localization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
