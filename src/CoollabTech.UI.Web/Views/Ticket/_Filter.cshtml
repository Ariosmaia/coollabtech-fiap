<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Prestador de serviço</label>
                @Html.DropDownList("ServiceProviderId", new SelectList(ViewBag.ServiceProviders, "Id", "Name"), null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">Tipo</label>
                @Html.DropDownList("TicketTypeId", new SelectList(ViewBag.TicketTypes, "Id", "Name"), null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">Status</label>
                @Html.DropDownList("TicketStatusId", new SelectList(ViewBag.TicketStatus, "Id", "Name"), null, new { @class = "form-control" })
            </div>
            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-4">
                    <input type="submit" value="Filtrar" class="btn btn-primary btn-main" />
                </div>
                <div class="col-sm-4">
                    <a class="btn btn-secondary btn-main" asp-action="Create">Novo</a>
                </div>                
            </div>
        </form>
    </div>
</div>